<div id="reportDetailsButtons" class="panel-heading-details-control btn-toolbar{{#if hidden}} hidden{{/if}}">
    {{#if (or (not data.report.reports) (not data.report.reports.infoOrWarningOrError) (lte data.report.reports.infoOrWarningOrError.length data.maximumReportsForDetailedOutput))}}
        {{#if (or
                      (and (gt data.report.counters.nrOfErrors 0) (or (gt data.report.counters.nrOfWarnings 0) (gt data.report.counters.nrOfAssertions 0)))
                      (and (gt data.report.counters.nrOfWarnings 0) (or (gt data.report.counters.nrOfErrors 0) (gt data.report.counters.nrOfAssertions 0)))
                      (and (gt data.report.counters.nrOfAssertions 0) (or (gt data.report.counters.nrOfWarnings 0) (gt data.report.counters.nrOfErrors 0)))
              )
        }}
            <div id="severityFilterButton" class="btn-group{{#if config.isMinimalUI}} dropup{{/if}}">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span id="severityFilterText">{{data.translations.viewReportItemsShowAll}}</span> <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#" class="severityFilterChange"><span id="severityFilterShowAllText">{{data.translations.viewReportItemsShowAll}}</span></a></li>
                    <li role="separator" class="divider"></li>
                    {{#if (gt data.report.counters.nrOfErrors 0)}}
                        <li id="severityFilterErrorOption"><a class="severityFilterChangeWithType" data-severity="error" href="#"><span id="severityFilterShowErrorsText">{{data.translations.viewReportItemsShowErrors}}</span></a></li>
                    {{/if}}
                    {{#if (gt data.report.counters.nrOfWarnings 0)}}
                        <li id="severityFilterWarningOption"><a class="severityFilterChangeWithType" data-severity="warning" href="#"><span id="severityFilterShowWarningsText">{{data.translations.viewReportItemsShowWarnings}}</span></a></li>
                    {{/if}}
                    {{#if (gt data.report.counters.nrOfAssertions 0)}}
                        <li id="severityFilterMessageOption"><a href="#" class="severityFilterChangeWithType" data-severity="message"><span id="severityFilterShowMessagesText">{{data.translations.viewReportItemsShowMessages}}</span></a></li>
                    {{/if}}
                </ul>
            </div>
        {{/if}}
        {{#if data.showAggregateReport}}
            <div class="btn-group{{#if config.isMinimalUI}} dropup{{/if}}">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span id="reportTypeSelectText">{{data.translations.viewReportItemsDetailed}}</span> <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#" class="reportTypeChange" data-detailed="false"><span id="reportTypeSelectDetailedText">{{data.translations.viewReportItemsDetailed}}</span></a></li>
                    <li><a href="#" class="reportTypeChange" data-detailed="true"><span id="reportTypeSelectAggregatedText">{{data.translations.viewReportItemsAggregated}}</span></a></li>
                </ul>
            </div>
        {{/if}}
    {{/if}}
</div>